# Environment configuration for PetRescue
DEBUG=True
SECRET_KEY=change-me
ALLOWED_HOSTS=127.0.0.1,localhost

# Database selection: sqlite or mysql
DB_ENGINE=sqlite

# MySQL configuration (used when DB_ENGINE=mysql)
MYSQL_DATABASE=petrescue
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306

# Email configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@petrescue.local
